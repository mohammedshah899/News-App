<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:id="@+id/image_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World"
        android:layout_alignBottom="@id/image_id"
        android:layout_margin="10dp"
        android:id="@+id/headline_id"
        android:textSize="20sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Mohammed"
        android:layout_below="@id/headline_id"
        android:id="@+id/description_id"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_id"
        android:textSize="15sp"
        android:text="Sports"
        android:layout_alignParentRight="true"
        android:layout_below="@id/description_id"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/section_id"
        android:text="Fine Arts"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/description_id"/>



</RelativeLayout>